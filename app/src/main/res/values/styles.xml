<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.CardView" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">2dp</item>
        <!--<item name="contentPaddingBottom">24dp</item>-->
        <!--<item name="contentPaddingTop">24dp</item>-->
        <!--<item name="contentPaddingLeft">16dp</item>-->
        <!--<item name="contentPaddingRight">16dp</item>-->
        <item name="cardBackgroundColor">@color/cardview_colour</item>
    </style>

    <style name="AppTheme.CardView.White" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">10dp</item>
        <!--<item name="contentPaddingBottom">24dp</item>-->
        <!--<item name="contentPaddingTop">24dp</item>-->
        <!--<item name="contentPaddingLeft">16dp</item>-->
        <!--<item name="contentPaddingRight">16dp</item>-->
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

</resources>
